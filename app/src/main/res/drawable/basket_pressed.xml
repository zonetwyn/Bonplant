<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:height="150dp"
                android:width="150dp" />
            <corners
                android:radius="75dp" />
            <solid
                android:color="#35000000" />
        </shape>
    </item>

    <item
        android:right="2dp"
        android:bottom="2dp">
        <shape>
            <size
                android:height="150dp"
                android:width="150dp" />
            <corners
                android:radius="75dp" />
            <solid
                android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

</layer-list>